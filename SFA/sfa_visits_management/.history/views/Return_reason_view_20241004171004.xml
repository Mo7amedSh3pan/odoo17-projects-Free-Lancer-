<odoo>
    <!--    tree view-->
    <record id="view_tree_return_reasons" model="ir.ui.view">
        <field name="name">visit.return.reason.tree</field>
        <field name="model">visit.return.reason</field>
        <field name="arch" type="xml">
            <tree string="Return Reasons" editable="bottom">
                <field name="name" width="width400" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <!--    action record-->
    <record id="action_return_reasons" model="ir.actions.act_window">
        <field name="name">Return Reasons</field>
        <field name="res_model">visit.return.reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>