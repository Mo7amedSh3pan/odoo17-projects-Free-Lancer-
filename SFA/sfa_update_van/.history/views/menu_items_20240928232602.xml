    <record id="action_sfa_territory" model="ir.actions.act_window">
        <field name="name">Territories</field>
        <field name="res_model">sfa.territory</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_sfa_territory" name="Territories" parent="menu_sfa_geography"
        action="action_sfa_territory" sequence="50" />
